{
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "esnext"
    ],
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "baseUrl": "./src",
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/shims"
    ]
  }
}
